# ============================================
# MultiBank Automation Framework Configuration
# ============================================
# Copy this file to .env and customize as needed
# cp .env.example .env

# ============================================
# APPLICATION SETTINGS
# ============================================

# Base URL of the application under test
BASE_URL=https://trade.multibank.io/

# ============================================
# BROWSER SETTINGS
# ============================================

# Browser type: chromium, firefox, or webkit
BROWSER=chromium

# Run browser in headless mode (true/false)
# Headless = no visible browser window
# Headed = browser window visible (useful for debugging)
HEADLESS=false

# Slow down browser operations by N milliseconds
# Useful for debugging or demo purposes
# 0 = no delay (default for fast execution)
# 500-1000 = good for watching tests run
SLOW_MO=0

# Browser viewport (window) size
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# ============================================
# TIMEOUT SETTINGS (in milliseconds)
# ============================================

# Default timeout for most operations
# 30000ms = 30 seconds (recommended)
DEFAULT_TIMEOUT=30000

# Timeout for page navigation
# Increase if pages load slowly
NAVIGATION_TIMEOUT=30000

# ============================================
# TEST EXECUTION SETTINGS
# ============================================

# Maximum number of retries for failed tests
# 0 = no retries
# 2 = retry up to 2 times (recommended)
MAX_RETRIES=2

# Number of parallel workers for test execution
# 1 = sequential (default, easier to debug)
# 2-4 = parallel (faster but harder to debug)
PARALLEL_WORKERS=1

# ============================================
# SCREENSHOT & RECORDING SETTINGS
# ============================================

# Capture screenshot on test failure (true/false)
# Highly recommended for debugging
SCREENSHOT_ON_FAILURE=true

# Capture full page screenshot (true/false)
# true = entire page (even parts not visible)
# false = only visible viewport
FULL_PAGE_SCREENSHOT=true

# Video recording mode
# Options: on, off, retain-on-failure
# on = record all tests
# off = no recording
# retain-on-failure = only keep videos of failed tests (recommended)
VIDEO_RECORDING=retain-on-failure

# Enable Playwright trace (detailed debugging info)
# true = generate trace files (can view with: playwright show-trace)
# false = no traces (faster)
TRACE_ENABLED=false

# ============================================
# LOGGING SETTINGS
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG = most verbose (all details)
# INFO = normal (recommended)
# WARNING = only warnings and errors
# ERROR = only errors
LOG_LEVEL=INFO

# ============================================
# EXAMPLE CONFIGURATIONS
# ============================================

# --- For Development (local testing with visible browser) ---
# BROWSER=firefox
# HEADLESS=false
# SLOW_MO=500
# LOG_LEVEL=DEBUG
# SCREENSHOT_ON_FAILURE=true
# VIDEO_RECORDING=retain-on-failure

# --- For CI/CD (fast, headless execution) ---
# BROWSER=chromium
# HEADLESS=true
# SLOW_MO=0
# LOG_LEVEL=INFO
# SCREENSHOT_ON_FAILURE=true
# VIDEO_RECORDING=off
# PARALLEL_WORKERS=4

# --- For Debugging (detailed, slow, visible) ---
# BROWSER=firefox
# HEADLESS=false
# SLOW_MO=1000
# LOG_LEVEL=DEBUG
# SCREENSHOT_ON_FAILURE=true
# VIDEO_RECORDING=on
# TRACE_ENABLED=true

# --- For Demo/Presentation (visible, slower) ---
# BROWSER=firefox
# HEADLESS=false
# SLOW_MO=800
# VIEWPORT_WIDTH=1280
# VIEWPORT_HEIGHT=720
# LOG_LEVEL=INFO